function [ctrlWindow, controls] = MakeControlWindow
    ctrlWindow = figure;
    
    controls.kSlider = uicontrol(...
        'parent', ctrlWindow,'style','slider','units', 'normalized', ...
        'position', [0.01 0.01 0.9 0.05], ...
        'min', -10, ...
        'max', 20);
    controls.listeners.k = addListener(contrkSlider,'ContinuousValueChange', ...
        {@controlCallBack, ctrlWindow, controls});
end